<h1>EAT DA BURGER!</h1>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      {{> burgers/burger-block}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Eaten Burgers!</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      {{> burgers/burger-block}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
